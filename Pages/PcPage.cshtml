@page
@model WebApp.Pages.PcPageModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do Usuário</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            margin-bottom: 20px;
        }

        h1 {
            color: #007bff;
        }

        .section-title {
            color: #6c757d;
            margin-top: 20px;
        }

        .status-card {
            padding: 20px;
            border-radius: 8px;
            color: white;
        }

            .status-card.success {
                background-color: #28a745; /* Verde */
            }

            .status-card.failure {
                background-color: #dc3545; /* Vermelho */
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="card shadow-sm mb-4">
            <div class="card-body text-center">
                <form method="post">
                    <div class="form-group text-center">
                        <label for="codeInput">Digite o Código:</label>
                        <input type="text" class="form-control text-center" id="codeInput" name="cod" placeholder="Insira o código" required />
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Submeter</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Card para exibir status -->
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            <p>Erro: Código não encontrado inválidos.</p>
        </div>
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const statusCard = statusContainer.querySelector(".status-card");

            let status = "@Model.Status";
            alert(status)

            if (statusContainer && status) {
                // Remove a classe d-none
                statusCard. classList.remove("d-none");

                // Adiciona a classe de cor baseada no status
                if (status === "success") {
                    statusCard.classList.add("bg-success", "text-white"); // Classe bootstrap para fundo verde
                } else if (status === "failure") {
                    statusCard.classList.add("bg-danger", "text-white"); // Classe bootstrap para fundo vermelho
                }
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
