<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do Usuário</title>

    <!-- Link do Bootstrap para um design bonito e responsivo -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Adicionando um fundo suave e estilo de card */
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            margin-bottom: 20px;
        }

        h1 {
            color: #007bff;
        }

        .section-title {
            color: #6c757d;
            margin-top: 20px;
        }

        .user-info p, .address-info p {
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .user-info strong, .address-info strong {
            color: #495057;
        }
    </style>
</head>
<body>



    <!-- Divs para mensagens de feedback -->
    <div id="successMessage" class="alert alert-success d-none" role="alert">
        Doação validada com sucesso!
    </div>
    <div id="errorMessage" class="alert alert-danger d-none" role="alert">
        Doação não encontrada.
    </div>
    <!-- Formulário para inserir o código -->
    <div class="container">
        <div class="card shadow-sm mb-4">
            <div class="card-body text-center">
                <form method="post">
                    <div class="form-group text-center">
                        <label for="codeInput">Digite o Código:</label>
                        <input type="text" class="form-control text-center" id="codeInput" name="cod" placeholder="Insira o código" required>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Submeter</button>
                </form>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="text-center">Bem-vindo, @Model.user.Name!</h1>
                <p class="text-center text-muted">Email: @Model.user.Email</p>

                <div class="user-info">
                    <h2 class="section-title">Informações do Usuário</h2>
                    <p><strong>Nome:</strong> @Model.user.Name</p>
                    <p><strong>Email:</strong> @Model.user.Email</p>
                </div>

                <div class="address-info">
                    <h2 class="section-title">Endereço do PC:</h2>
                    <p><strong>Usuário:</strong> @Model.Pc.UserName</p>
                    <p><strong>CEP:</strong> @Model.Pc.Cep</p>
                    <p><strong>Rua:</strong> @Model.Pc.Street, @Model.Pc.Number</p>
                    <p><strong>Bairro:</strong> @Model.Pc.Neighborhood</p>
                    <p><strong>Complemento:</strong> @Model.Pc.Complement</p>
                    <p><strong>Cidade:</strong> @Model.Pc.City</p>
                    <p><strong>Estado:</strong> @Model.Pc.State</p>
                </div>

            </div>
        </div>
    </div>

